%header.mdl-layout__header
	.mdl-layout__header-row
		%span.mdl-layout-title= link_to 'DoctorsCo', root_path, class: 'white-text logo-font no-decoration medium-font'
		.mdl-layout-spacer
		%nav.mdl-navigation.mdl-layout--large-screen-only
			=link_to'Buscar',root_path,class: "mdl-navigation__link"
			-if user_signed_in?
				=link_to'Cerrar Sesion',destroy_user_session_path, method: :delete,class: "mdl-navigation__link"
			-else
				=link_to 'Iniciar Sesion', new_user_session_path, class: "mdl-navigation__link"
.mdl-layout__drawer
	%span.mdl-layout-title.logo-font.light-blue-text.medium-font	 DoctorsCo
	%nav.mdl-navigation
		-if user_signed_in?
			=link_to'Pacientes',patients_path,class: "mdl-navigation__link"
			=link_to'Citas',appointments_path,class: "mdl-navigation__link"
			=link_to'Consultas',consultations_path,class: "mdl-navigation__link"
			=link_to'Comunidad',posts_path,class: "mdl-navigation__link"
			=link_to'Cerrar sesion',destroy_user_session_path, method: :delete,class: "mdl-navigation__link"
		-else
			=link_to 'Iniciar Sesion', new_user_session_path, class: "mdl-navigation__link"
