.row.big-padding.center-xs.white-text.blue
  %h1 Listado de citas
.row.top-space.full-height.center-xs
  .col-xs-12.col-sm-8.col-lg-4
    .box
      %table.mdl-data-table.mdl-js-data-table.mdl-shadow--2dp
        %thead
          %tr
            %th.mdl-data-table__cell--non-numeric Paciente
            %th.mdl-data-table__cell--non-numeric Fecha
            %th.mdl-data-table__cell--non-numeric Hora
            %th.mdl-data-table__cell--non-numeric Acciones
        %tbody
          -@appointments.each do |appointment|
            %tr
              %td
                =appointment.patient.first_name 
                =appointment.patient.last_name
              %td
                =appointment.date
              %td
                =appointment.hour.strftime('%H:%M')
              %td
                =link_to "Mostrar", appointment, class: 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored'
.btn-floating
  =button_to new_appointment_path(), method: :get, class: "mdl-button mdl-js-button mdl-button--fab mdl-button--colored mdl-ripple-effect" do
    %i.material-icons add
= link_to 'New Appointment', new_appointment_path
