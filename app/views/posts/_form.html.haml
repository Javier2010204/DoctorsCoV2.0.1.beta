= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message

  .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
    = f.text_field :title,class:"mdl-textfield__input"
    = f.label "Titulo",class:"mdl-textfield__label"
  .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
    = f.text_area :body,class:"mdl-textfield__input"
    = f.label "Escriba aqui su sugerencia de mejora",class:"mdl-textfield__label"
  .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
    = f.number_field :likes,class:"mdl-textfield__input"
    = f.label "Likes",class:"mdl-textfield__label"
  .actions
    = f.submit 'Save'
