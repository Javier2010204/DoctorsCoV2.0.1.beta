.row.big-padding.blue.center-xs.white-text
  %h1 Listado de consultas
.row.top-space.full-height.center-xs
  .col-xs-12.col-sm-12.col-lg-8 
    .box
      %table.mdl-data-table.mdl-js-data-table.mdl-shadow--2dp
        %thead
          %tr
            %th.mdl-data-table__cell--non-numeric Nombre paciente
            %th.mdl-data-table__cell--non-numeric Motivo
            %th.mdl-data-table__cell--non-numeric Fecha
            %th.mdl-data-table__cell--non-numeric Diagnostico
            %th.mdl-data-table__cell--non-numeric Receta
            %th.mdl-data-table__cell--non-numeric 
        %tbody
          - @consultations.each do |consultation|
            %tr
              %td
                = consultation.patient.first_name
                = consultation.patient.last_name
              %td= consultation.motivo
              %td= consultation.fecha
              %td= consultation.diagnostico
              %td= consultation.receta
              %td= link_to 'Mostrar', consultation, class: 'mdl-button mdl-js-button mdl-button--raised mdl-button--accent'
.btn-floating
  =button_to new_consultation_path(), method: :get, class: 'mdl-button mdl-js-button mdl-button--fab mdl-button--colored mdl-js-ripple-effect' do
    %i.material-icons add
